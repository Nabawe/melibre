    /* * In theory anthing that is passed to TSX is passed to node.js but this configuration would allow to change for another node.js wrapper with more ease should TSX stop working */
    /*
        skipFiles
            On single file debugging it might be useful to check libraries and etc, but when the full project is being debugged better skip them.

        "internalConsoleOptions": "openOnSessionStart"
            Add this if the default changes to something more annoying.

        "console": "integratedTerminal"
            Change to externalTerminal on dual screens.
    */
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TSX Debug Current File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--loader", "tsx"],
            "args": ["${relativeFile}"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "TSX Strict Debug Current File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--loader", "tsx"],
            "args": ["${relativeFile}"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development",
                "LOG_LEVEL": "debug"
            }
        },
        {
            "name": "TSX Debug experiments.ts",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": ["--loader", "tsx"],
            "args": ["${workspaceFolder}/.xp/experiments.ts"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "TSX Debug Project",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ],
        },
        {
            "name": "Compile & Debug experiments.ts",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "xp"],
            "outFiles": ["${workspaceFolder}/.xp/**/*.js"],
            "console": "integratedTerminal",
            "skipFiles": [
                "${workspaceFolder}/dist/**"
            ]
        },
        {
            "name": "Compile & Debug src files",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "console": "integratedTerminal",
            "skipFiles": [
                "${workspaceFolder}/dist/**",
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ]
        }
    ]
}
